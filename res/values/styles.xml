<resources> 
    <style name="ListItemTitle" parent="@android:style/TextAppearance.Medium"> 
        <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItemDescription" parent="@android:style/TextAppearance.Small"> 
        <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="PageHeader" > 
        <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">68dip</item> 
        <item name="android:background">@drawable/header_background</item>
    </style>
    
    <style name="Numbers"> 
		<item name="android:inputType">number</item>
	</style>
    
